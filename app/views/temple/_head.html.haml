.header
  = link_to root_path,class:"header__title" do
    エフェクター収集
  - if user_signed_in? 
    .header__list
      = icon('fa', 'user', class: "header__list-user")
      ログイン中： 
      = current_user.nickname
      = link_to new_effect_path,class: "header__list-post" do
        = icon('fa', 'pen')
        新規投稿
      = link_to user_path(current_user.id),class: "header__list-mypage" do
        = icon('fa', 'user-circle')
        マイページ
      = link_to destroy_user_session_path, method: :delete,class: "header__list-logout" do
        = icon('fa', 'user-times')
        ログアウト
    = form_with(url: effects_searches_path, local: true, method: :get, class: "search-form") do |form| 
      = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" 
      = form.submit "検索", class: "search-btn"
  - else
    .header__list
      = link_to new_user_session_path,class: "header__list-login" do
        = icon('fa', 'user')
        ログイン
      = link_to new_user_registration_path,class: "header__list-new" do
        = icon('fa', 'user-plus')
        新規登録