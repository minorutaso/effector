.wrapper
  = render 'temple/head'
.block
  .sidebar
    .sidebar-link
      .content
        .content-name
          投稿者：
          = @effect.user.nickname
        .content-maker
          メーカー：
          = @effect.maker
        .content-effect-name
          　名前　：
          = @effect.name
        .content-attri
          　種類　：
          = @effect.attri
      .content-image
        = image_tag @effect.image.url
      .content-text
        =@effect.text
  .comment
    .comment__view
      -@comments.each do |comment| 
        .comment__view__box
          .comment__view__box-hi
            = link_to comment.user.nickname, user_path(@effect.user.id),class:"comment__view__box-hi-name"
            .comment__view__box-hi-time
              = comment.created_at
          .comment__view__box-row  
            .comment__view__box-row__text
              = comment.text 
    .send
      = form_with(model: [@effect, @comment], local: true) do |form| 
        .send-comment
          コメントを入力 :
          = form.text_area :text,class:"send-form"
          .send-form-submit
            = form.submit "送信"